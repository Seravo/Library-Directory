{{{header}}}

{{#data}}
<div class="row-fluid">
  <div class="span6">
	<p><a href="/id/{{id}}">hakemisto.kirjastot.fi/{{name_short_fi}}</a></p>
	<h1>{{name_fi}}</h1>
    <p><strong class="address"><i class="icon-map-marker"></i> {{contact.street_address.street_fi}}, {{contact.street_address.area_fi}} {{contact.street_address.post_code}} {{contact.street_address.municipality_fi}}</strong></p>

    {{#contact.directions_fi}}
        <p>_("Directions"): {{contact.directions_fi}}</p>
    {{/contact.directions_fi}}
    
	{{#contact.coordinates}}
		<p>
			<div id="mapcontainer" class="openlayers-map"><div id="basicmap"></div></div>
			<script type="text/javascript">
			<!--
			function library_details_map() { ld_mapcontrol_init("{{contact.coordinates}}","",""); }
			-->
			</script>
			Coordinates: {{contact.coordinates}}
			<!-- karttalinkki: {{contact.map_url_fi}} -->
		</p>
	{{/contact.coordinates}}

    <p><strong class="quotesign">‚Äù</strong>{{description_fi}}</p>        
        		
	<dl>
		{{#services.0.name_fi}}
	    <dt>_("Services")</dt>
	    <dd>
	         {{#services}}
                {{name_fi}}<br>
                
                <!--
                    {{type}} {{model}} ({{description_short_fi}}, {{description_long_fi}}) {{price}} {{for_loan}} {{instance_name_fi}} {{instance_description_fi}}
                    {{#tag}}[{{.}}]{{/tag}}<br>
                    {{#contact}}
                        {{telephone}} {{email}} {{url_fi}}
                    {{/contact}}
                    {{service_priority}}
                    {{servicetype_priority}}
                -->
             {{/services}}
	    </dd>
	    {{/services.0.name_fi}}
	    
		{{#contact.telephones.0.telephone_number}}
	    <dt>_("Telephone numbers")</dt>
	    <dd>
	        {{#contact.telephones}}
                <img src="/img/glyphicons_139_phone.png" alt="_("Phone icon")"> <a href="tel:{{telephone_number}}">{{telephone_number}}</a> / {{telephone_name_fi}}<br>
            {{/contact.telephones}}
	    </dd>
	    {{/contact.telephones.0.telephone_number}}
	    
		{{#contact.mail_address.post_box}}
	    <dt>_("Mail address")</dt>
	    <dd>
	        _("PB") {{contact.mail_address.post_box}}<br>
	        {{contact.mail_address.post_code}} {{contact.mail_address.post_office_fi}}
	    </dd>
	    {{/contact.mail_address.post_box}}

		{{#contact.email}}
	    <dt>_("E-mail")</dt>
	    <dd><i class="icon-envelope"></i> <a href="mailto:{{contact.email}}">{{contact.email}}</a></dd>
	    {{/contact.email}}
	    	    
		{{#contact.homepage_fi}}
        <dt>_("Homepage")</dt>
        <dd>
            <i class="icon-home"></i> <a href="{{contact.homepage_fi}}">{{contact.homepage_fi}}</a>
            {{#contact.internet}}
                <br><a href="{{url_fi}}">{{name_fi}}</a> ({{url_description_fi}})
            {{/contact.internet}}
        </dd>
	    {{/contact.homepage_fi}}

		{{#additional_info}}
        <dt>_("Additional info")</dt>
        <dd>
            {{#extrainfo}}
                {{property_label_fi}}: {{property_value_fi}}<br>
            {{/extrainfo}}
        </dd>
	    {{/additional_info}}


	    <dt>_("Library identificator and type")</dt>
	    <dd>
	        ISIL: {{isil}}<br>
	        _("ID"): {{identificator}}<br>
	        _("Branch"): {{branch_type}}<br>
	        _("Organisation"): {{organisation_type}}
	    </dd>

		{{#established_year}}
	    <dt>_("Established year")</dt>
	    <dd>{{established_year}}</dd>
	    {{/established_year}}

	    <dt>_("Library consortium")</dt>
	    <dd><a href="/id/{{parent_organisation}}">{{consortium}}</a></dd>	    
    </dl>

    <p><small>_("Last modified"): {{meta.modified}}</small></p>
  </div>

  <div class="span6">
    <div class="opentimes">
        <i class="icon-time"></i>
        {{#neveropen}}
            _("No open times, since this is a {{organisation_type}}.")
        {{/neveropen}}

        {{^neveropen}}
            <h3>_("The library is now")
		    {{#opening_hours.open_now}}
	            <strong class="open">_("Open")</strong>
			    Opening hours today {{opening_hours.open_hours_today}}
		    {{/opening_hours.open_now}}

		    {{^opening_hours.open_now}}
	            <strong class="closed">_("Closed")</strong>
	        {{/opening_hours.open_now}}
		    </h3>
		    <br>
	        <h3>_("Opening hours this week")</h3>
	        <table>
			    {{#opening_hours.open_hours_week}}
				    <tr><td>{{day}}<td>&nbsp;<td>{{time}}</tr>
			    {{/opening_hours.open_hours_week}}
	        </table>
        {{/neveropen}}

    </div>
        
    <div class="buildinginfo">
        {{#image_url}}
        <img src="{{image_url}}" alt="{{name_fi}}">
        {{/image_url}}
        <table>
        {{#contact.building_fi}}
            <tr><th>_("Building"):</th><td>{{contact.building_fi}}</td></tr>
        {{/contact.building_fi}}
        {{#contact.building_year}}
            <tr><th>_("Built"):</th><td>{{contact.building_year}}</td></tr>
        {{/contact.building_year}}
        {{#contact.building_architect}}
            <tr><th>_("Architect"):</th><td>{{contact.building_architect}}</td></tr>
        {{/contact.building_architect}} 
        <td><th colspan="2">&nbsp;</td></tr>
        {{#accessibility.accessible_entry}}
            <tr><th>_("Accessible entry"):</th><td>_("yes")</td></tr>
        {{/accessibility.accessible_entry}}
        {{#accessibility.accessible_parking}}
            <tr><th>_("Accessible parking"):</th><td>_("yes")</td></tr>
        {{/accessibility.accessible_parking}}
        {{#accessibility.accessible_toilet}}
            <tr><th>_("Accessible toilet"):</th><td>_("yes")</td></tr>
        {{/accessibility.accessible_toilet}}
    	{{#extraaccessibilityinfo}}
            <tr><th>{{extra_accessibility_property_label_fi}}:</th><td>{{extra_accessibility_property_value_fi}}</td></tr>
        {{/extraaccessibilityinfo}}
        {{#accessibility.induction_loop}}
            <tr><th>_("Induction loop"):</th><td>_("yes")</td></tr>
        {{/accessibility.induction_loop}}
        {{#accessibility.large_typeface_collection}}
            <tr><th>_("Large typeface<br> collection"):</th><td>_("yes")</td></tr>
        {{/accessibility.large_typeface_collection}}
        {{#accessibility.lift}}
            <tr><th>_("Lift"):</th><td>_("yes")</td></tr>
        {{/accessibility.lift}}
        <td><th colspan="2">&nbsp;</td></tr>
        {{#contact.parking_fi}}
            <tr><th>_("Parking"):</th><td>{{contact.parking_fi}}</td></tr>
        {{/contact.parking_fi}}
        </table>
    </div>

  </div>

</div>
{{/data}}

{{{footer}}}
