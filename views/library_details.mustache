{{{header}}}

{{#data}}
<div class="row-fluid">
  <div class="span6">
	<p><a href="/id/{{id}}">hakemisto.kirjastot.fi/{{name_short_fi}}</a></p>
	<h1>{{name_fi}}</h1>
    <p><strong class="address"><i class="icon-map-marker"></i> {{contact.street_address.street_fi}}, {{contact.street_address.area_fi}} {{contact.street_address.post_code}} {{contact.street_address.municipality_fi}}</strong></p>

    {{#contact.directions_fi}}
        <p>Directions: {{contact.directions_fi}}</p>
    {{/contact.directions_fi}}
    
    <p>[karttaikkuna - koordinaatit: {{contact.coordinates}}, karttalinkki: {{contact.map_url_fi}}]</p>
    
    <p><strong class="quotesign">‚Äù</strong>{{description_fi}}</p>        
        		
	<dl>
		{{#services.0.name_fi}}
	    <dt>Services</dt>
	    <dd>
	         {{#services}}
                {{name_fi}}<br>
                
                <!--
                    {{type}} {{model}} ({{description_short_fi}}, {{description_long_fi}}) {{price}} {{for_loan}} {{instance_name_fi}} {{instance_description_fi}}
                    {{#tag}}[{{.}}]{{/tag}}<br>
                    {{#contact}}
                        {{telephone}} {{email}} {{url_fi}}
                    {{/contact}}
                    {{service_priority}}
                    {{servicetype_priority}}
                -->
             {{/services}}
	    </dd>
	    {{/services.0.name_fi}}
	    
		{{#contact.telephones.0.telephone_number}}
	    <dt>Telephone numbers</dt>
	    <dd>
	        {{#contact.telephones}}
                <img src="/img/glyphicons_139_phone.png" alt="Phone icon"> <a href="tel:{{telephone_number}}">{{telephone_number}}</a> / {{telephone_name_fi}}<br>
            {{/contact.telephones}}
	    </dd>
	    {{/contact.telephones.0.telephone_number}}
	    
		{{#contact.mail_address.post_box}}
	    <dt>Mail address</dt>
	    <dd>
	        PB {{contact.mail_address.post_box}}<br>
	        {{contact.mail_address.post_code}} {{contact.mail_address.post_office_fi}}
	    </dd>
	    {{/contact.mail_address.post_box}}

		{{#contact.email}}
	    <dt>E-mail</dt>
	    <dd><i class="icon-envelope"></i> <a href="mailto:{{contact.email}}">{{contact.email}}</a></dd>
	    {{/contact.email}}
	    	    
		{{#contact.homepage_fi}}
        <dt>Homepage</dt>
        <dd>
            <i class="icon-home"></i> <a href="{{contact.homepage_fi}}">{{contact.homepage_fi}}</a>
            {{#contact.internet}}
                <br><a href="{{url_fi}}">{{name_fi}}</a> ({{url_description_fi}})
            {{/contact.internet}}
        </dd>
	    {{/contact.homepage_fi}}

		{{#additional_info}}
        <dt>Additional info</dt>
        <dd>
            {{#extrainfo}}
                {{property_label_fi}}: {{property_value_fi}}<br>
            {{/extrainfo}}
        </dd>
	    {{/additional_info}}


	    <dt>Library identificator and type</dt>
	    <dd>
	        ID: {{identificator}}<br>
	        Branch: {{branch_type}}<br>
	        Organisation: {{organisation_type}}
	    </dd>

		{{#established_year}}
	    <dt>Established year</dt>
	    <dd>{{established_year}}</dd>
	    {{/established_year}}

	    <dt>Library consortium</dt>
	    <dd><a href="/id/{{parent_organisation}}">{{consortium}}</a></dd>	    
    </dl>

    <p><small>Last modified: {{meta.modified}}</small></p>
  </div>

  <div class="span6">
    <div class="opentimes">
        <i class="icon-time"></i>
        {{#neveropen}}
            No open times, since this is a {{organisation_type}}.
        {{/neveropen}}

        {{^neveropen}}
            <h3>The library is now
		    {{#opening_hours.open_now}}
	            <strong class="open">Open</strong>
			    Opening hours today {{opening_hours.open_hours_today}}
		    {{/opening_hours.open_now}}

		    {{^opening_hours.open_now}}
	            <strong class="closed">Closed</strong>
	        {{/opening_hours.open_now}}
		    </h3>
		    <br>
	        <h3>Opening hours this week</h3>
	        <table>
			    {{#opening_hours.open_hours_week}}
				    <tr><td>{{day}}<td>&nbsp;<td>{{time}}</tr>
			    {{/opening_hours.open_hours_week}}
	        </table>
        {{/neveropen}}

    </div>
        
    <div class="buildinginfo">
        {{#image_url}}
        <img src="{{image_url}}" alt="{{name_fi}}">
        {{/image_url}}
        <table>
        {{#contact.building_fi}}
            <tr><th>Building:</th><td>{{contact.building_fi}}</td></tr>
        {{/contact.building_fi}}
        {{#contact.building_year}}
            <tr><th>Built</th><td>{{contact.building_year}}</td></tr>
        {{/contact.building_year}}
        {{#contact.building_architect}}
            <tr><th>Architect:</th><td>{{contact.building_architect}}</td></tr>
        {{/contact.building_architect}} 
        <td><th colspan="2">&nbsp;</td></tr>
        {{#accessibility.accessible_entry}}
            <tr><th>Accessible entry:</th><td>yes</td></tr>
        {{/accessibility.accessible_entry}}
        {{#accessibility.accessible_parking}}
            <tr><th>Accessible parking:</th><td>yes</td></tr>
        {{/accessibility.accessible_parking}}
        {{#accessibility.accessible_toilet}}
            <tr><th>Accessible toilet:</th><td>yes</td></tr>
        {{/accessibility.accessible_toilet}}
    	{{#extraaccessibilityinfo}}
            <tr><th>{{extra_accessibility_property_label_fi}}:</th><td>{{extra_accessibility_property_value_fi}}</td></tr>
        {{/extraaccessibilityinfo}}
        {{#accessibility.induction_loop}}
            <tr><th>Induction loop:</th><td>yes</td></tr>
        {{/accessibility.induction_loop}}
        {{#accessibility.large_typeface_collection}}
            <tr><th>Large typeface<br> collection:</th><td>yes</td></tr>
        {{/accessibility.large_typeface_collection}}
        {{#accessibility.lift}}
            <tr><th>Lift:</th><td>yes</td></tr>
        {{/accessibility.lift}}
        <td><th colspan="2">&nbsp;</td></tr>
        {{#contact.parking_fi}}
            <tr><th>Parking:</th><td>{{contact.parking_fi}}</td></tr>
        {{/contact.parking_fi}}
        </table>
    </div>

  </div>

</div>
{{/data}}

{{{footer}}}
