/* Configuration for read-only ES front end proxy */
/* TODO: check it these POSTs are safe? */

{
    "seeds" : ["localhost:9200"],
    "refresh" : 2000,
    "allow" : {
        "GET" : ["(_search|_status|_mapping|_count)","/.+/.+/.+/_mlt","/.+/.+/.+]"],
        "POST" : ["_search|_count","/.+/.+/.+/_mlt"],
        "OPTIONS" : [".*"]
    },
    "port" : 80,
    "host": "127.0.0.1"
}
